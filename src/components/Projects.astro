---
import Card from "./Card.astro";
import projects from "../config/projects.json";
---

<h1 id="title-projects" class="title"></h1>

<div class="projects-wrap">
  {
    projects.map((project) => (
      <Card sizeBody="1.2rem">
        <a href={project.link} target="_blank" class="link" slot="title">
          <img class="img-project" src={project.img} />
        </a>
        <span slot="body">{project.description}</span>
      </Card>
    ))
  }
</div>

<script>
  import TypeIt from "typeit/src/TypeIt";

  new TypeIt("#title-projects", {
    lifeLike: true,
    waitUntilVisible: true,
  }).type("Proyectos").go();
</script>

<style>
  .title {
    padding-top: 100px;
    padding-left: 7.5%;
    font-size: 4rem;
    font-weight: bold;
  }

  .link {
    border-radius: 10px;
  }

  .img-project {
    max-width: 100%;
    border-radius: 10px;
  }

  .projects-wrap {
    padding-top: 30px;
    display: grid;
    place-content: center;
    grid-template-columns: repeat(auto-fit, minmax(max(20rem, 100%/4), 1fr));
    gap: 20px;
  }

  @media screen and (max-width: 1100px) {
    .title {
      font-size: 3.5rem;
      padding-top: 0;
      padding-left: 0;
      text-align: center;
    }
  }

  @media screen and (max-width: 800px) {
    .title {
      font-size: 2.5rem;
      padding-top: 0;
      padding-left: 0;
      text-align: center;
    }
  }
</style>
