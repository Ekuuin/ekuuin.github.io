---
interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link
      href="
https://cdn.jsdelivr.net/npm/reset-css@5.0.2/reset.min.css
"
      rel="stylesheet"
    />
    <link rel="shortcut icon" href="favicon.svg" type="image/svg+xml" />
  </head>
  <body>
    <div class="page-wrapper">
      <section class="section-dots">
        <div class="dots-pattern">
          <img src="dotspattern.svg" class="img-cover" />
        </div>
      </section>
      <slot />
      <div class="noise"></div>
    </div>
  </body>
</html>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Archivo:wght@300;400&family=Hind+Madurai&family=Nunito&family=Source+Code+Pro&display=swap");

  html {
    scroll-behavior: smooth;
  }

  * {
    box-sizing: border-box;
    color: white;
  }

  body {
    background-color: #0f0617;
    font-family: "Archivo", sans-serif;
  }

  .page-wrapper {
    z-index: 2;
    position: relative;
  }

  .section-dots {
    z-index: 3;
    padding-top: 120px;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
  }

  .noise {
    z-index: 2;
    background-image: url("/noise.png");
    background-position: 0 0;
    background-size: auto;
    position: absolute;
    top: 0%;
    bottom: 0%;
    left: 0%;
    right: 0%;
  }

  .dots-pattern {
    position: relative;
    overflow: hidden;
  }

  .img-cover {
    width: 100%;
    max-width: 100%;
    object-fit: cover;
    vertical-align: middle;
    display: inline-block;
  }

  @media screen and (max-width: 1100px) {
    .section-dots {
      display: none;
    }
  }
</style>
